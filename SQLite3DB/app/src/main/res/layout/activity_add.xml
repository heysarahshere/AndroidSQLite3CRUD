<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">
    <TextView
        android:id="@+id/nameLabelAdd"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Name"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/priceLabel2"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Price"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textPrice"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/descLabel2"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textRating"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Rating"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/textPrice" />

    <TextView
        android:id="@+id/addLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Record"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textName"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/addLabelText" />

    <EditText
        android:id="@+id/textDesc"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/descLabel"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <EditText
        android:id="@+id/textPrice"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceLabel"
        app:layout_constraintTop_toBottomOf="@+id/textDesc" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:onClick="addRecordButtonClicked"
        android:text="Add Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRating" />

    <TextView
        android:id="@+id/ratingLabel2"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Rating"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textRating"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/moneyLabel"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:text="$"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/textPrice"
        app:layout_constraintEnd_toStartOf="@+id/textPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>