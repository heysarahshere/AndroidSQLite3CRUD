<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update">

    <TextView
        android:id="@+id/nameLabel3"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Name"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateTextName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Price"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateTextPrice"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/descLabel"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateTextDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/updateTextRating"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Rating"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/updateTextPrice" />

    <TextView
        android:id="@+id/addLabelText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Edit Record"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateTextName"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/addLabelText2" />

    <EditText
        android:id="@+id/updateTextDesc"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/descLabel"
        app:layout_constraintTop_toBottomOf="@+id/updateTextName" />

    <EditText
        android:id="@+id/updateTextPrice"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceLabel"
        app:layout_constraintTop_toBottomOf="@+id/updateTextDesc" />

    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:onClick="updateButtonClicked"
        android:text="Submit Changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateTextRating" />

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:text="Rating"
        android:textAlignment="textEnd"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateTextRating"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/moneyLabel"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:text="$"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateTextPrice"
        app:layout_constraintEnd_toStartOf="@+id/updateTextPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>